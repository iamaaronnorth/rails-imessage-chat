<div class="chat-container">
  <div class="sidebar">
    <div class="sidebar-header">
      <h2>Chats</h2>
    </div>
    <div class="chat-list">
      <% if @chats.any? %>
        <% @chats.each do |chat| %>
          <div class="chat-item <%= 'active' if chat == @current_chat %>">
            <%= link_to chat.name, chat_path(chat) %>
          </div>
        <% end %>
      <% else %>
        <p>No chats available</p>
      <% end %>
    </div>
  </div>
  
  <div class="main-content">
    <% if @current_chat %>
      <div class="chat-header">
        <h3><%= @current_chat.name %></h3>
      </div>
      
      <div class="messages-container" id="messages">
        <div class="empty-state">
          <p>Select a chat to start messaging</p>
          <p><%= link_to "Go to #{@current_chat.name}", chat_path(@current_chat), class: "btn" %></p>
        </div>
      </div>
    <% else %>
      <div class="empty-state">
        <p>No chats available</p>
      </div>
    <% end %>
  </div>
</div>
